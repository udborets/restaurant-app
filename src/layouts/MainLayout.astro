---
import Header from "@/components/astro/Header/Header.astro";
import "@/styles/global.scss";

export interface MainLayoutProps {
  title?: string;
  description?: string;
  isHeaderAbsolute?: boolean;
}

const {
  title = "Restaurant App",
  description = "Welcome to Restaurant App",
  isHeaderAbsolute = false,
} = Astro.props as MainLayoutProps;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Neucha&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header isAbsolute={isHeaderAbsolute} />
    <slot />
  </body>
</html>
