---
export interface homePagePostProps {
  isImgLeft?: boolean;
  isImgRight?: boolean;
  text: string;
  imageSrc: string;
  title?: string;
}
const {
  isImgLeft = false,
  isImgRight = false,
  text = "",
  imageSrc,
  title,
} = Astro.props as homePagePostProps;
---

<div class="homePagePost w-full h-fit p-2">
  <div class="homePagePost__container w-full h-full flex justify-around">
    {
      isImgLeft ? (
        <img src={imageSrc} alt="Post image" class="homePagePost__image" />
      ) : (
        ""
      )
    }
    <div class="homePagePost__textBlock flex flex-col gap-4">
      {
        title ? (
          <h4 class={`homePagePost__title font-bold text-[2.7rem]${isImgLeft ? " text-right" : ""}`}>{title}</h4>
        ) : (
          ""
        )
      }
      <p class="homePagePost__text">
        {text}
      </p>
    </div>
    {
      isImgRight ? (
        <img src={imageSrc} alt="Post image" class="homePagePost__image" />
      ) : (
        ""
      )
    }
  </div>
</div>

<style lang="css">
  .homePagePost__image {
    width: 500px;
    height: auto;
    object-fit: cover;
  }
</style>
