---
export interface homePagePostProps {
  imageSide: "left" | "right";
  text: string;
}
const { imageSide, text } = Astro.props as homePagePostProps;
---

<div class="homePagePost flex w-full h-fit">
  {imageSide === "left" ? <img src="" alt="" /> : ""}
  <p>{text}</p>
  {imageSide === "right" ? <img src="" alt="" /> : ""}
</div>
